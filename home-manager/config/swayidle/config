# Lock after 5 minutes
timeout 300 'swaylock -F -i "/home/mlflexer/repos/.dotfiles/home-manager/modules/configs/gnome/img/background.png" -l --font "MonaspiceNe Nerd Font"'

# Turn off displays after 10 minutes, and turn them back on when resumed
timeout 600 'bash /home/mlflexer/.config/niri/scripts/outputs_off.sh' resume 'bash /home/mlflexer/.config/niri/scripts/outputs_on.sh'

# Suspend after 15 minutes
timeout 1800 'systemctl suspend'

# Lock before the system goes to sleep
before-sleep 'swaylock -F -i "/home/mlflexer/repos/.dotfiles/home-manager/modules/configs/gnome/img/background.png" -l --font "MonaspiceNe Nerd Font"'

# Logind hooks
lock 'swaylock -F -i "/home/mlflexer/repos/.dotfiles/home-manager/modules/configs/gnome/img/background.png" -l --font "MonaspiceNe Nerd Font"'
unlock 'bash /home/mlflexer/.config/niri/scripts/outputs_on.sh'
